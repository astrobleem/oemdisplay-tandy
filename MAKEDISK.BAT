@ECHO OFF
REM Build and package TNDY16 driver

SET PATH=C:\DDK\286\TOOLS;C:\BIN;%PATH%
SET LIB=C:\LIB
SET INCLUDE=C:\INCLUDE;C:\DDK\286\INC

IF EXIST TNDY16.DRV DEL TNDY16.DRV
CALL BUILD.BAT
IF ERRORLEVEL 1 GOTO END

IF EXIST TNDY16 RD /S /Q TNDY16
MD TNDY16
COPY TNDY16.DRV TNDY16\TNDY16.DRV
COPY OEMSETUP.INF TNDY16\OEMSETUP.INF
COPY FILE_ID.DIZ TNDY16\FILE_ID.DIZ
COPY README.TXT TNDY16\README.TXT

UNIX2DOS TNDY16\OEMSETUP.INF
UNIX2DOS TNDY16\FILE_ID.DIZ
UNIX2DOS TNDY16\README.TXT

IF NOT EXIST C:\PKZIP.EXE GOTO NOPKZIP
IF EXIST TNDY16.ZIP DEL TNDY16.ZIP
PKZIP TNDY16.ZIP TNDY16\*
GOTO END

:NOPKZIP
ECHO C:\PKZIP.EXE NOT FOUND

:END
